<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Owner's Name:</label>
    <br>
    <input type="text" name="pet_name" value="<%= @pet.name %>">

    <br>
    <p>Select an existing owner or create a new one below.</p>

    <h3>Existing Owners</h3>
        <% @owners.each do |owner| %>
            <input id='<%= owner.id %>' type="radio" name="owner_id" value="<%= owner.id%>" <%= "checked" if @pet.owner == owner %>> ><%= owner.name %><br>
        <% end %>
    <br>

    <h3>New Owner</h3>
    <label>Owner name:</label>
    <br>
      <input  type="text" id="owner_name" name="owner[name]"></input>
    <br><br>
    
    <input type="submit" value="Update Pet">
  </form>