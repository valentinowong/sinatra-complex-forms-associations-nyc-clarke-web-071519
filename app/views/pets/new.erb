<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
    <label>Name:</label>
    <br>
    <input type="text" name="pet_name">

    <br>
    <p>Select an existing owner or create a new one below.</p>

    <h3>Existing Owners</h3>
        <% @owners.each do |owner| %>
            <input id='<%= owner.id %>' type="radio" name="owner_id" value="<%= owner.id%>"><%= owner.name %><br>
        <% end %>
    <br>

    <h3>New Owner</h3>
    <label>Owner name:</label>
    <br>
      <input  type="text" id="owner_name" name="owner[name]"></input>
    <br><br>
    
    <input type="submit" value="Create Pet">
  </form>